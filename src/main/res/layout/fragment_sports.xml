<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context="split.timing.SportsFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/sports_name_text"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:paddingRight="2dp"
                    android:text="Name:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/sports_name_edit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@drawable/edittext_orange"
                    android:ems="10"
                    android:hint="Thomas"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/sports_surname_text"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:paddingRight="2dp"
                    android:text="Last name:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/sports_surname_edit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@drawable/edittext_orange"
                    android:ems="10"
                    android:hint="MÃ¼ller"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textSize="20sp" />
            </TableRow>

            <DatePicker
                android:id="@+id/sports_datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/card"
                android:calendarViewShown="false"
                android:padding="4dp"
                android:spinnersShown="true"
                android:startYear="1950" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/sports_club_text"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:paddingRight="2dp"
                    android:text="Club:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/sports_club_edit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@drawable/edittext_orange"
                    android:ems="10"
                    android:hint="Trondheim Skiklub"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/sports_federation_text"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:paddingRight="2dp"
                    android:text="Federation:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/sports_federation_edit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@drawable/edittext_orange"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:hint="Swedish Ski Association"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textSize="20sp" />
            </TableRow>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
