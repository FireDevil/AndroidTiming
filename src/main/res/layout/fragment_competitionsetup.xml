<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp">

        <LinearLayout
            android:id="@+id/competition_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/startlist_edit_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/competition_label"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:paddingRight="2dp"
                    android:text="Name: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <split.timing.helpers.CircleButton
                    android:id="@+id/competition_circle_edit"
                    android:layout_width="55dip"
                    android:layout_height="55dip"
                    android:layout_gravity="bottom|right"
                    android:layout_weight="0.25"
                    android:src="@android:drawable/ic_menu_edit"
                    app:cb_color="#ff983c"
                    app:cb_pressed_ring_width="8dip" />

            </TableRow>

            <TableRow
                android:id="@+id/startlist_name_row"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/competition_name_text"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:gravity="left"
                    android:text="Name: "
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/competition_name_edit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@drawable/edittext_blue"
                    android:ems="10"
                    android:hint="New York Marathon"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/startlist_location_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/competition_location_text"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:paddingRight="2dp"
                    android:gravity="left"
                    android:text="Location: "
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/competition_location_edit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@drawable/edittext_blue"
                    android:ems="10"
                    android:hint="London"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textSize="20sp" />
            </TableRow>

            <DatePicker
                android:id="@+id/competition_datepicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:calendarViewShown="false"
                android:padding="8dp"
                android:spinnersShown="true"
                android:startYear="1950" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:animateLayoutChanges="true">

        <split.timing.helpers.DynamicListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="4dp"
            android:drawSelectorOnTop="true"
            android:fastScrollEnabled="true" />

        <split.timing.helpers.CircleButton
            android:id="@+id/competition_circle_btn"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_action_new"
            app:cb_color="#ff983c"
            app:cb_pressed_ring_width="8dip" />

        <LinearLayout
            android:id="@+id/undobar"
            style="@style/UndoBar"
            android:layout_marginRight="80dp">

            <TextView
                android:id="@+id/undobar_message"
                style="@style/UndoBarMessage" />

            <Button
                android:id="@+id/undobar_button"
                style="@style/UndoBarButton" />
        </LinearLayout>


    </FrameLayout>


</LinearLayout>