<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timing_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:actionBarSize"
    tools:context="split.timing.Timing">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:dragView="@+id/slideUpImageView"
        sothree:overlay="true"
        sothree:panelHeight="@dimen/slide_up_panel_height"
        sothree:shadowHeight="8dp">


        <!-- As the main content view, the view below consumes the entire
             space available using match_parent in both dimensions. -->
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:animateLayoutChanges="true">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/slide_up_panel_height"
                android:layout_gravity="top"
                android:animateLayoutChanges="true">

                <TextView
                    android:id="@+id/slideUpText"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:text="qwertzuiopüasdfghjklöäyxcvbnm || qwertzuiopüasdfghjklöäyxcvbnm"
                    android:textSize="24sp" />

                <split.timing.helpers.CircleButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/slideUpCircleButton"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/ic_action_up"
                    app:cb_color="@android:color/holo_orange_dark"
                    app:cb_pressed_ring_width="2dip" />

            </TableRow>


            <FrameLayout
                android:id="@+id/slideUpContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <!-- android:layout_gravity="start" tells DrawerLayout to treat
             this as a sliding drawer on the left side for left-to-right
             languages and on the right side for right-to-left languages.
             If you're not building against API 17 or higher, use
             android:layout_gravity="left" instead. -->
        <!-- The drawer is given a fixed width in dp and extends the full height of
             the container. -->

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

    <fragment
        android:id="@+id/timing_drawer_right"
        android:name="split.timing.TimingDrawerRight"
        android:layout_width="@dimen/timing_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        tools:layout="@layout/timing_drawer_right" />

    <fragment
        android:id="@+id/timing_drawer_left"
        android:name="split.timing.TimingDrawerLeft"
        android:layout_width="@dimen/timing_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/timing_drawer_left" />

</android.support.v4.widget.DrawerLayout>
