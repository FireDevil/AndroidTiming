<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card">

    <TableRow
        android:id="@+id/startlist_element_numTableRow"
        android:layout_width="0dip"
        android:layout_weight="0.5"
        android:paddingLeft="4dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dip"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/startlist_element_num"
            android:maxWidth="70dp"
            android:textSize="30sp"
            android:textColor="@android:color/holo_orange_dark" />

        <TextView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/startlist_element_pos"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:gravity="top" />
    </TableRow>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dip"
        android:paddingLeft="4dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/startlist_element_name"
            android:textColor="#000000" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:gravity="start|bottom"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/startlist_element_info"
                    android:textColor="#888888" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:gravity="bottom|end"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/startlist_element_extra"
                    android:textColor="#888888"
                    android:paddingRight="5dp" />

            </TableRow>
        </TableRow>

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/Antec/SkyDrive/Android/AndroidTiming/AndroidTiming/src/main/res/layout/startlist_element.xml -->