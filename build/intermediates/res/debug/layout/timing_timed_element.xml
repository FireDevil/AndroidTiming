<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingTop="6dp"
android:paddingBottom="6dp"
android:paddingRight="6dp"
android:background="@android:color/white"
android:orientation="horizontal">

<TableRow
    android:id="@+id/timing_timed_element_numTableRow"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_weight="0.7"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:id="@+id/timing_timed_element_num"
        android:layout_width="0dip"
        android:layout_height="48dp"
        android:layout_weight="3"
        android:gravity="center"
        android:maxWidth="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/gruen"
        android:textSize="25sp" />

</TableRow>

<LinearLayout
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:orientation="vertical"
    android:paddingLeft="4dp">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/timing_timed_element_name"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="start"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/timing_timed_element_time"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:singleLine="true"
            android:gravity="end"
            android:textColor="#000000" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingRight="4dp">


            <TextView
                android:id="@+id/timing_timed_element_lap"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:gravity="start"
                android:textColor="#888888"
                android:layout_width="0dip" />

            <TextView
                android:id="@+id/timing_timed_element_clock"
                android:layout_width="0dip"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="bottom|end"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#888888" />

        </TableRow>

</LinearLayout>

